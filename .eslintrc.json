{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "define": false,
        "angular": false
    },
    "rules": {
        "no-console": ["warn"],
        "indent": ["warn", 4],
        "no-unused-vars": ["warn"],
        // "linebreak-style": [
        //     "warn",
        //     "windows"
        // ],
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}